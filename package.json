{
  "name": "@szdailei/core",
  "version": "0.5.0",
  "description": "Client and server core",
  "author": "Dai Lei <szdailei@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/szdailei/core.git"
  },
  "homepage": "https://github.com/szdailei/core#readme",
  "main": "./index.js",
  "type": "module",
  "files": [
    "server/",
    "client/",
    "api-server-vars.js"
  ],
  "publishConfig": {
    "access": "public"
